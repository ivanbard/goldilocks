# Required: Google Gemini API key (https://aistudio.google.com/app/apikey)
GEMINI_API=your_gemini_api_key_here

# Optional: OpenWeatherMap API key (free tier: https://openweathermap.org/api)
# Falls back to mock weather data if not provided
OPENWEATHERMAP_API_KEY=your_openweathermap_key_here

# Serial port for Arduino gateway (e.g., COM3 on Windows, /dev/ttyACM0 on Linux)
SERIAL_PORT=COM3
SERIAL_BAUD=115200

# Backend
BACKEND_PORT=3001
BACKEND_URL=http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Demo mode (set to 'true' to simulate sensor data without ESP32 hardware)
DEMO_MODE=false
